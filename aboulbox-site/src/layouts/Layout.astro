---
import "../styles/global.css";
import { BackgroundBeams } from "@/components/ui/shadcn-io/background-beams";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <script
      is:inline
      defer
      src="https://umami.abel-brien.localhost/script.js"
      data-website-id="e9b34fca-cb81-4285-8671-e4430d1132f9"></script>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="Abel BRIEN is Frontend Web Developer working on Magento E-Commerce since 15 years and creating others cool stuffs with React"
    />
  </head>
  <body>
    <div class="min-h-screen bg-teal-950">
      <div class="min-h-screen bg-teal-950">
        <BackgroundBeams className="fixed inset-0" />
        <div
          class="mx-auto min-h-screen flex flex-col justify-center max-w-(--breakpoint-xl) px-6 py-12 font-sans md:px-12 md:py-16 lg:py-0 relative z-10"
        >
          <slot />
        </div>
      </div>
    </div>
  </body>
</html>
